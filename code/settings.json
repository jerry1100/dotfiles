{
    // Native settings
    "window.zoomLevel": 0,
    "editor.lineNumbers": "relative",
    "emmet.showExpandedAbbreviation": "never",
    "workbench.startupEditor": "none",
    "diffEditor.renderSideBySide": false,
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "editor.minimap.enabled": false,
    "window.openFilesInNewWindow": "on",
    "workbench.settings.openDefaultSettings": false,
    "editor.wordBasedSuggestions": false, // suggests words that are present in the file
    "javascript.nameSuggestions": false, // suggests a bunch of global identifiers
    "javascript.validate.enable": false, // adds native validation for javascript

    // Extension settings
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.gitExplorer.enabled": false,
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.historyExplorer.enabled": true
}